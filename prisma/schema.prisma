// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model User {
    id               String  @id @default(cuid())
    supabaseId       String? @unique
    name             String?
    email            String? @unique
    imageURL         String?
    hasPaymentMethod Boolean @default(false)

    // Cinemate relations
    bookings  Booking[]
    heldSeats ShowtimeSeat[]
}

// ==================== MOVIES ====================

model Movie {
    id          String   @id @default(cuid())
    tmdbId      Int      @unique //TMDB ID
    title       String
    description String?  @db.Text
    runtime     Int // Duration in minutes
    rating      Float? // Average rating (e.g., 8.5)
    releaseDate DateTime
    posterUrl   String?
    backdropUrl String?
    trailerUrl  String?
    genres      String? // Comma-separated: "Action, Sci-Fi, Thriller"
    languages   String? // Comma-separated: "English, Spanish"
    cast        String?  @db.Text // Comma-separated: "Tom Hanks, Meg Ryan"
    directors   String? // Comma-separated: "Christopher Nolan"
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    showtimes Showtime[]

    @@index([title])
    @@index([releaseDate])
}

// ==================== SEATS ====================

model Seat {
    id     String @id @default(cuid())
    row    Int // Row number (1=A, 2=B, etc.)
    number Int // Seat number within row

    tickets       Ticket[]
    showtimeSeats ShowtimeSeat[]

    @@unique([row, number])
}

// ==================== SHOWTIMES ====================

model Showtime {
    id             String   @id @default(cuid())
    movieId        String
    movie          Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
    startTime      DateTime
    endTime        DateTime
    price          Decimal  @db.Decimal(10, 2)
    availableSeats Int // Cached count for quick filtering
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt

    tickets       Ticket[]
    showtimeSeats ShowtimeSeat[]
    bookings      Booking[]

    @@unique([movieId, startTime])
    @@index([movieId])
    @@index([startTime])
    @@index([movieId, startTime])
}

// ==================== BOOKINGS & TICKETS ====================

model Booking {
    id          String        @id @default(cuid())
    userId      String
    user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
    showtimeId  String
    showtime    Showtime      @relation(fields: [showtimeId], references: [id])
    ticketCount Int
    totalAmount Decimal       @db.Decimal(10, 2)
    status      BookingStatus @default(CONFIRMED)
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @updatedAt

    tickets Ticket[]

    @@index([userId])
    @@index([showtimeId])
    @@index([status])
}

enum BookingStatus {
    CONFIRMED
    CANCELLED
}

model Ticket {
    id         String       @id @default(cuid())
    bookingId  String
    booking    Booking      @relation(fields: [bookingId], references: [id], onDelete: Cascade)
    seatId     String
    seat       Seat         @relation(fields: [seatId], references: [id])
    showtimeId String
    showtime   Showtime     @relation(fields: [showtimeId], references: [id])
    price      Decimal      @db.Decimal(10, 2)
    status     TicketStatus @default(VALID)
    createdAt  DateTime     @default(now())
    updatedAt  DateTime     @updatedAt

    @@index([bookingId])
    @@index([seatId, showtimeId])
}

enum TicketStatus {
    VALID
    CANCELLED
}

// ==================== SEAT AVAILABILITY ====================

// Denormalized table for efficient seat availability queries
// One row entry per seat per showtime - created when showtime is created
model ShowtimeSeat {
    id           String     @id @default(cuid())
    showtimeId   String
    showtime     Showtime   @relation(fields: [showtimeId], references: [id], onDelete: Cascade)
    seatId       String
    seat         Seat       @relation(fields: [seatId], references: [id], onDelete: Cascade)
    status       SeatStatus @default(AVAILABLE)
    // Reservation info (when status = RESERVED)
    heldByUserId String?
    heldBy       User?      @relation(fields: [heldByUserId], references: [id], onDelete: SetNull)
    heldAt       DateTime?
    expiresAt    DateTime? // Auto-release after 10 minutes
    updatedAt    DateTime   @updatedAt

    @@unique([showtimeId, seatId])
    @@index([showtimeId, status])
    @@index([expiresAt])
    @@index([heldByUserId])
}

enum SeatStatus {
    AVAILABLE
    RESERVED // Temporarily held during checkout
    BOOKED // Ticket purchased
}
